{
  "name": "hotel-zante",
  "description": "hotel-zante",
  "version": "1.0.0",
  "keywords": [],
  "author": "Pashchuk Ilya",
  "license": "ISC",
  "scripts": {
    "clean-dist": "rm -rf dist && mkdir dist",
    "clean-css": "rm -rf src/css",
    "clean-scss": "rm -rf dist/scss",
    "copy-src": "cp -r src/* dist",
    "scss:build": "npm run clean-css && npx postcss ./src/scss/style.scss --output ./src/css/main.css --verbose",
    "scss:watch": "npm run clean-css && sass --watch --stop-on-error ./src/scss/style.scss ./src/css/main.css",
    "dev": "npm run scss:watch",
    "build": "npm run clean-dist && npm run scss:build && npm run copy-src && npm run clean-scss",
    "deploy": "sshpass -p ${npm_config_deploy_ssh_password} rsync -avz --delete -e 'ssh -p '${npm_config_deploy_ssh_port} ./dist/ ${npm_config_deploy_ssh_server}:${npm_config_deploy_ssh_path}",
    "deploy:dev": "sshpass -p ${npm_config_deploy_dev_ssh_password} rsync -avz --delete -e 'ssh -p '${npm_config_deploy_dev_ssh_port} ./dist/ ${npm_config_deploy_dev_ssh_server}:${npm_config_deploy_dev_ssh_path}"
  },
  "dependencies": {
  },
  "devDependencies": {
    "css-minify": "^2.0.0",
    "cssnano": "^6.0.1",
    "sass": "^1.65.1",
    "autoprefixer": "^10.4.15",
    "clean-css": "^5.3.2",
    "postcss": "^8.4.27",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-cli": "^10.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-scss": "^4.0.6"
  }
}
